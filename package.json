{
  "name": "package-registry-mcp",
  "version": "2.1.0",
  "description": "MCP server for searching and getting up-to-date information about NPM, Cargo and NuGet packages.",
  "author": "Christoffer Artmann <artgaard@gmail.com>",
  "license": "MIT",
  "keywords": [
    "mcp",
    "mcp-server",
    "modelcontextprotocol",
    "npm",
    "cargo",
    "nuget",
    "package-registry",
    "claude",
    "ai"
  ],
  "homepage": "https://github.com/artmann/package-registry-mcp",
  "repository": {
    "type": "git",
    "url": "https://github.com/artmann/package-registry-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/artmann/package-registry-mcp/issues"
  },
  "main": "dist/index.js",
  "bin": {
    "package-registry-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22.21.1"
  },
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm && bun build src/http-server.ts --outfile dist/http-server.js --target node --format esm",
    "format": "bun prettier --write .",
    "http": "bun run src/http-server.ts",
    "lint": "eslint src/",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "tool": "bun run src/test-tool.ts",
    "typecheck": "bun tsc --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "express": "^4.21.2",
    "zod": "^3.25.0"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bun": "latest",
    "@types/express": "^5.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "msw": "^2.12.3",
    "prettier": "^3.7.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.14"
  },
  "packageManager": "yarn@1.22.22+sha1.ac34549e6aa8e7ead463a7407e1c7390f61a6610"
}
